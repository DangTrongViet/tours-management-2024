include ../mixins/search.pug
header.header 
        .container
                .row-align-items-center
                    .col-3 
                        .inner-logo
                            a(href="/")
                                img(src="/images/th12_ODYP.jpg", alt="Logo" )
                    .col-5 
                        +search()
                    .col-9
                        .inner-menu
                            ul 
                                li                          
                                    a(href="/") Trang chủ

                                li 
                                    a(href="/categories") Danh mục
                                li 
                                    a(href="/cart") Giỏ hàng (<span mini-cart>0</span>)
                                
                                if(user)
                                    li  
                                        a(href="/user/info") #{user.fullName}
                                    li  
                                        a(href="/user/logout") Đăng xuất
                                else

                                    li  
                                        a(href="/user/login") Đăng nhập
                                    li  
                                        a(href="/user/register") Đăng ký