
extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
    +alert-error(5000)
    +alert-success(5000)
    .container.my-5 
        .row-justify-content-center 
            .col-8
                h1(class="mb-4") Nhập mã OTP xác thực
                form(form-otp)
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                        )
                    div(class="form-group")
                        label(for="otp") Mã OTP 
                        input(
                            type="text"
                            class="form-control"
                            id="otp"
                            name="otp"
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Xác nhận