extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3
        .row 
            .col-12 
                +box-head(pageTitle)
        .row 
            .col-12 
                table(class="table table-bordered")
                    thead 
                        tr 
                            th STT 
                            th Ảnh
                            th Tiêu đề
                            th Giá
                            th Số lượng
                            th Tổng tiền
                            th Hành động

                    tbody
                        tr
                            td
                            td
                                img(src="")
                            td
                                a(href=`tours/detail/`)
                            td
                            td
                                input(
                                    type="number"
                                    name="quantity"
                                    value=""
                                    min="1"
                                    item-id=""
                                    stype="width: 60px" 
                                )
                            td
                            td
                                button(
                                    btn-delete =``
                                    class="btn btn-sm btn-danger"
                                ) Xoá
                h5(class="text-right mb-4") Tổng đơn hàng: <span total-price>0</span>
        .row
            .col-12
                +box-head("Thông tin khách hàng")

                form(form-order)
                    div(class="form-control")
                        label(for="fullName") Họ tên
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                            required
                        )
                    div(class="form-control")
                        label(for="phone") Số điện thoại
                        input(
                            type="text"
                            class="form-control"
                            id="phone"
                            name="phone"
                            required
                        )
                    div(class="form-control")
                        label(for="note") Ghi chú
                        textarea(
                            type="text"
                            class="form-control"
                            id="note"
                            name="note"
                            rows="2"
                        )
                    div(class="form-control")
                        button(
                            class="btn btn-success btn-block"
                        ) ĐẶT TOUR

