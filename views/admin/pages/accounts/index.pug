extends ../../layouts/default

block main
    .main-content
        h1 Danh sách tài khoản
        .card.mb-3
            .card-header Danh sách
            .card-body
                        .row
                            .col-8
                                // Bộ lọc và tìm kiếm có thể nằm ở đây
                            .col-4.text-right
                                a(
                                    href=`${prefixAdmin}/accounts/create`
                                    class="btn btn-outline-success"
                                ) 
                                    i.fas.fa-plus-circle.me-1
                                    | Thêm mới
                        table(class="table table-hover table-sm")
                            thead
                                tr
                                    th STT
                                    th Avatar
                                    th Họ tên
                                    th Phân quyền
                                    th Email
                                    th Trạng thái
                                    th(class="text-center") Hành động
                            tbody
                                if(records.length > 0)
                                    each item, index in records
                                        tr
                                            td #{index + 1}
                                            td 
                                                img(
                                                    src=item.avatar
                                                    alt=item.fullName
                                                    width="100px"
                                                    height="auto"
                                                )
                                            td #{item.fullName}
                                            td #{item.role.title}
                                            td #{item.email}
                                            td #{item.status}
                                            td.text-center
                                                a(
                                                    href=`${prefixAdmin}/accounts/detail/${item.id}`
                                                    class="btn btn-secondary btn-sm"
                                                ) 
                                                    i.fas.fa-info-circle.me-1
                                                    | Chi tiết
                                                a(
                                                    href=`${prefixAdmin}/accounts/edit/${item.id}`
                                                    class="btn btn-warning btn-sm"
                                                ) 
                                                    i.fas.fa-edit.me-1
                                                    | Sửa
                                                button(
                                                    class="btn btn-danger btn-sm ml-1"
                                                    data-id=item.id
                                                    button-delete
                                                ) 
                                                    i.fas.fa-trash.me-1
                                                    | Xóa 